<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<Pane fx:id="pane" onMouseMoved="#getCoordinates" prefHeight="580.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.approject.GameController">
   <children>
      <ImageView fx:id="background" fitHeight="580.0" fitWidth="360.0" pickOnBounds="true">
         <image>
            <Image url="@game_background.png" />
         </image>
      </ImageView>
      <ImageView fx:id="board1" fitHeight="366.0" fitWidth="248.0" layoutX="56.0" layoutY="48.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@board_1.png" />
         </image>
      </ImageView>
      <ImageView fx:id="greendie" fitHeight="33.0" fitWidth="25.0" layoutX="63.0" layoutY="410.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@green_token.png" />
         </image>
      </ImageView>
      <ImageView fx:id="bluedie" fitHeight="33.0" fitWidth="37.0" layoutX="50.0" layoutY="402.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@blue_token.png" />
         </image>
      </ImageView>
      <ImageView fx:id="dieouter" fitHeight="53.0" fitWidth="57.0" layoutX="154.0" layoutY="455.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@dice_outer.png" />
         </image>
      </ImageView>
      <ImageView fx:id="player1" fitHeight="53.0" fitWidth="99.0" layoutX="68.0" layoutY="457.0" pickOnBounds="true">
         <image>
            <Image url="@player_1_new.png" />
         </image>
      </ImageView>
      <ImageView fx:id="player2" fitHeight="53.0" fitWidth="99.0" layoutX="198.0" layoutY="455.0" pickOnBounds="true">
         <image>
            <Image url="@player_2_new.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="33.0" fitWidth="26.0" layoutX="10.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@return.png" />
         </image>
      </ImageView>
      <ImageView fx:id="dieImg" fitHeight="43.0" fitWidth="42.0" layoutX="160.0" layoutY="460.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="returnButton" layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onAction="#onClickReturn" opacity="0.0" prefHeight="23.0" prefWidth="25.0" />
      <Button fx:id="diceRoller" layoutX="158.0" layoutY="466.0" mnemonicParsing="false" onAction="#onDieRoll" opacity="0.0" prefHeight="33.0" prefWidth="42.0" />
      <Label fx:id="player1Label" alignment="CENTER" layoutX="103.0" layoutY="469.0" prefHeight="26.0" prefWidth="51.0" textFill="#fffdfd" />
      <Label fx:id="player2Label" alignment="CENTER" layoutX="205.0" layoutY="469.0" prefHeight="26.0" prefWidth="51.0" textFill="#fff8f8" />
      <ImageView fx:id="arrow" fitHeight="43.0" fitWidth="42.0" layoutX="159.0" layoutY="395.0" pickOnBounds="true">
         <image>
            <Image url="@arrow.png" />
         </image>
      </ImageView>
      <Text fx:id="Status" fill="#fffdfd" layoutX="156.0" layoutY="18.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Status" />
   </children>
</Pane>
